extends layout

block content
    h1 #{gameName}
    input(type="hidden" id="nameInfo" value=gameName)
    input(type="hidden" id="lobby_id" value=lobby_id)
    h3 Current Players:
    p #{username}
    br
    form(action='/dashboard/updateLobbyName' method="POST")
        input(type="text" id="lobbyName" name="lobbyName" placeholder="Lobby name")
        input(type="submit" name="change-name" value="Change Lobby")
    form(id="gameForm")
        input(type="submit" name="startGame" value="Start Game")
    form(action='/game/exitLobby' method="GET")
        input(type="submit" name="exit" value="Exit")
    form(id="pageForm" action='/g/0' mehod="GET")

    h4 Chat:
    ul(id="messages")
        form(id="messageForm")
            input(type="hidden" id="info" value=lobby_id)
            input(id="messageInput" autocomplete="off")
            input(type="submit" name="sendMessage" value="Send")

block scripts
    script(src="/socket.io/socket.io.js")
    script(src="/scripts/chat.js")
    script(src="/scripts/lobby.js")